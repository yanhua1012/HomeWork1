@using HomeWork1.Helper
@model IEnumerable<HomeWork1.Models.BalanceEntry>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{
                int sernalNo = 0;
                foreach (var item in Model.OrderByDescending(x => x.Date))
                {
                    <tr>
                        <td>@(++sernalNo)</td>
                        <td>@item.GetCategoryText()</td>
                        <td>@item.Date.ToString("yyyy-MM-dd HH:mm:ss fff")</td>
                        <td>@item.Money.ToString("c")</td>
                    </tr>
                }
                            }
        </table>
    </div>
</div>